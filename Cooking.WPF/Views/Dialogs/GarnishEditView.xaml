<UserControl
    x:Class="Cooking.WPF.Views.GarnishEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:converters="clr-namespace:Cooking.WPF.Converters">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:IsNullToVisibilityConverter x:Key="isNullToVisibilityConverter" NullVisibility="Collapsed" NotNullVisibility="Visible" />
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding CloseCommand}" />
    </UserControl.InputBindings>

    <Grid Height="150">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" MinWidth="130" />
        </Grid.ColumnDefinitions>

        <!-- Garnish edit controls -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding NameCaption}" />
                <TextBox
                    Name="Focused"
                    Grid.Column="1"
                    Text="{Binding Garnish.Name, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </ScrollViewer>

        <!-- Existing garnishes list -->
        <StackPanel Orientation="Vertical"
            Grid.Column="1"
            Margin="20 0 0 0">
            <TextBlock Text="{Binding MaybeYouWantCaption}" Visibility="{Binding SimilarGarnishes, Converter={StaticResource isNullToVisibilityConverter}}" />
            <ItemsControl Margin="0 5 0 0" ItemsSource="{Binding SimilarGarnishes}" />
        </StackPanel>
        
        <!-- Ok and Cancel buttons -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button Command="{Binding OkCommand}" Style="{StaticResource OkButton}" />
            <Button
                Margin="10 0 0 0"
                Command="{Binding CloseCommand}"
                Style="{StaticResource CancelButton}" />

        </StackPanel>
    </Grid>
</UserControl>