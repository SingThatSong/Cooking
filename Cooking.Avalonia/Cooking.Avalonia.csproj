    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.999-cibuild0005522-beta" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\ServiceLayer\Cooking.ServiceLayer.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="SideBar.xaml">
      <Generator></Generator>
    </None>
  </ItemGroup>
</Project>
