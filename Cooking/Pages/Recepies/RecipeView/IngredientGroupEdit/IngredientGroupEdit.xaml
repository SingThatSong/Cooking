<UserControl
  x:Class="Cooking.Pages.IngredientGroupEdit"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
  xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls">

  <UserControl.InputBindings>
    <KeyBinding Key="Esc" Command="{Binding CloseCommand.Value}" />
  </UserControl.InputBindings>

  <Grid Height="120" Margin="0 10 0 0">

    <Grid.RowDefinitions>
      <RowDefinition Height="30" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <TextBox
      Name="Focused"
      Height="30"
      Text="{Binding IngredientGroup.Name}" />
    <StackPanel
      Grid.Row="2"
      Margin="20"
      HorizontalAlignment="Center"
      Orientation="Horizontal">
      <Button Command="{Binding OkCommand}" Style="{StaticResource OkButton}" />
      <Button
        Margin="10 0 0 0"
        Command="{Binding CloseCommand}"
        Style="{StaticResource CancelButton}" />
    </StackPanel>
  </Grid>
</UserControl>
